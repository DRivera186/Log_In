<h4 class="title2">Welcome <%= @lender.first_name %>!</h4>

<div class="container6">
<h5>Name: <%= @lender.first_name %> <%= @lender.last_name %></h5>
<h5>Account Balance: $<%= @lender.money %></h5>
</div>


<div class="">

	<h4 class="title2 center" >List of people in need of help:</h4>

	<table class="responsive-table centered col s12 m2 teal lighten-5 table1">
		<thead>
		  <tr>
		      <th data-field="Name">Name</th>
		      <th data-field="date">Need Money For</th>
		      <th data-field="date">Reason for Loan</th>
		      <th data-field="date">Amount Needed</th>
		      <th data-field="location">Amount Raised</th>
		      <th data-field="location">Action</th>

		  </tr>
		</thead>
		<tbody>
		<% @user.each do |user| %>
		  <tr>
		    <td><%= user.first_name %> <%= user.last_name %></td>
		    <td><%= user.purpose %></td>
		    <td><%= user.description %></td>
		    <td>$ <%= user.money %></td>
		    <td>$ <%= user.raised %></td>		    
		    <td>
				<div class="row">
		    		<p class="col s1">$</p>
			    	<form action="/lender/<%= user.id %>" method="post">
			    		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
			    		<input type='hidden' name='_method' value='patch'>
			    		<div class="col s4">
							<input id="money" type="number" name="donate">
						</div>
						<div class="col s4 top">
						<input class="waves-light btn btn33" type="submit" value="Lend">
						</div>
			    	</form>
		    	</div>
			</td>
		</tr>
		<%end%>
		</tbody>
	</table>

	</table>
		<h4 class="title2 center"> List of Peiple you lent money to:</h4>
		<table class="responsive-table centered col s12 m2 teal lighten-5 table1">
		<thead>
		  <tr>
		      <th data-field="name">Name</th>
		      <th data-field="description">Need Money for</th>
		      <th data-field="description">Reason for Loan</th>
		      <th data-field="price">Amount Needed</th>
		      <th data-field="price">Amount Rasied</th>
		      <th data-field="price">Amount Lent</th>
		  </tr>
		</thead>
		<tbody>
		<% @lenders.each do |f| %>
		  <tr>
		    <td><%= f.first_name %><%= f.last_name %></td>
		    <td><%= f.purpose %></td>
		    <td><%= f.description %></td>
		    <td>$<%= f.money %></td>
		    <td>$<%= f.raised %></td>
		    <td>$<%= f.amount %></td>
		  </tr>
		<% end %>
		</tbody>
	</table>
</div>

